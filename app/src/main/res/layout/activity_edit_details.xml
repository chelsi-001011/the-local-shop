<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradientbg4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditDetails">
    <ImageView
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    android:src="@drawable/ic_back"
    android:layout_alignParentLeft="true"
    android:id="@+id/backfromprofile"
    />

    <EditText
        android:id="@+id/ChangeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backfromprofile"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="156dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:hint="Name"
        android:textColor="@color/black"
        android:inputType="text"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/ChangeContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ChangeName"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="35dp"
        android:textColor="@color/black"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:hint="Contact"
        android:inputType="number"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/ChangeAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ChangeContact"
        android:layout_marginLeft="16dp"
        android:textColor="@color/black"
        android:layout_marginTop="35dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:hint="Address"
        android:inputType="text"
        android:textSize="20dp" />

    <Button
        android:id="@+id/ChangeButton"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ChangeAddress"
        android:layout_marginTop="55dp"
        android:background="@drawable/gradientbg2"
        android:text="Change"
        android:textColor="@color/white"
        android:textSize="20dp" />
</RelativeLayout>